<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/aciklama"
        android:text="INTELLIGENT INVESTOR (AKILLI YATIRIMCI)"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
    </TextView>

    <ImageView
        android:id="@+id/book1"
        android:layout_width="700dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/book1"/>

    <TextView
        android:id="@+id/ortalama_acıklama"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="350dp"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="Benjamin Graham'ın Akıllı Yatırımcı Kitabı Değer Yatırımcılığı adına küresel boyutta oldukça beğenilen bir kitaptır. Günümüzün en ileri gelen yatırımcısı olan Warren Buffet'ında mentorü olan Benjamin Graham bu kitabı ile yatırımcılık psikolojisini okuyucularına geçiren önde gelen bir eserdir.  "
        />

    <ImageView
        android:id="@+id/mainpage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="570dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circle"
        ></ImageView>

    <ImageView
        android:id="@+id/next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="275dp"
        android:src="@drawable/rightarrow">
    </ImageView>

</RelativeLayout>